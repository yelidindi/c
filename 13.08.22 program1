#include <stdio.h>

int main() {
   int i,j;
   char ch='A';char ch1='a';
   for(i=1;i<=5;i++)
   {
       for(j=1;j<=i;j++)
       {
           printf("%c%c\t",ch,ch1);
           ch++;
           ch1++;
       }
       printf("\n");
   }
   return 0;
}
output:
Aa	
Bb	Cc	
Dd	Ee	Ff	
Gg	Hh	Ii	Jj	
Kk	Ll	Mm	Nn	Oo	
